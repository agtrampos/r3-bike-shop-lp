RewriteEngine On
RewriteBase /

# Redirecionar para HTTPS e WWW
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.r3bikeshop.com/$1 [L,R=301]

# Se o arquivo n√£o existir fisicamente na raiz
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Manda tudo para o index.php que faz a ponte para a pasta dist
RewriteRule . index.php [L]
